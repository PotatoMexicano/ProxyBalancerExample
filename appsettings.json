{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Yarp.ReverseProxy": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "ReverseProxyLoadBalancer"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "default": {
        "ClusterId": "backend_cluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      },
      "payment": {
        "ClusterId": "payment_cluster",
        "Match": {
          "Path":  "/payment/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "payment_cluster": {
        "LoadBalancingpolicy": "RoundRobin",
        "Destinations": {
          "server1": {
            "Address": "http://localhost:4242"
          }
        },
        "HealthCheck": {
          "Enabled": true,
          "Interval": "00:00:30",
          "Timeout": "00:00:10",
          "policy": "ConsecutiveFailures",
          "Path": "/health"
        }
      },
      "backend_cluster": {
        "LoadBalancingpolicy": "RoundRobin",
        "Destinations": {
          "server1": {
            "Address": "http://localhost:5001"
          },
          "server2": {
            "Address": "http://localhost:5002"
          }
        },
        "HealthCheck": {
          "Enabled": true,
          "Interval": "00:00:30",
          "Timeout": "00:00:10",
          "policy": "ConsecutiveFailures",
          "Path": "/health"
        }
      }
    }
  },
  "AllowedHosts": "*"
}