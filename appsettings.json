{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Yarp.ReverseProxy": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "ReverseProxyLoadBalancer"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "default": {
        "ClusterId": "backend_cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "backend_cluster": {
        "LoadBalancingpolicy": "RoundRobin",
        "Destinations": {
          "server1": {
            "Address": "http://localhost:5001"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}